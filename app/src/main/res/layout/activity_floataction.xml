<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_floataction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anitesh.photocon.floataction">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/select"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView9" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="21dp"
        app:backgroundTint="@color/colorAccent"
        android:layout_alignBottom="@+id/fab2"
        android:layout_toStartOf="@+id/fab4"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginRight="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginEnd="30dp"
        android:layout_above="@+id/fab3"
        android:layout_alignEnd="@+id/fab2"
        android:layout_marginBottom="11dp"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_upload"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="61dp"
        app:backgroundTint="#009688"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
